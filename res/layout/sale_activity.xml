<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/repeat_bg" >

        <fragment
            android:id="@+id/ShowAllProductFragment"
            android:name="com.cynovo.sirius.fragment.ShowAllProductFragment"
            android:layout_width="770dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp" />

        <fragment
            android:id="@+id/SaleListFragment"
            android:name="com.cynovo.sirius.fragment.ShoppingCartFragment"
            android:layout_width="470dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/ShowAllProductFragment" />
    </RelativeLayout>

    <fragment
        android:id="@+id/left_bar_fragment"
        android:name="com.cynovo.sirius.fragment.LeftBarFragment"
        android:layout_width="510dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>