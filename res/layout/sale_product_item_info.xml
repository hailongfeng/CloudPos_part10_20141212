<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="82dp">

    <ImageView
        android:id="@+id/sale_product_item_imageview"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/accounts" />

   <TextView
       android:id="@+id/sale_product_item_nuber" 
       android:background="@drawable/bar_color"
       android:textColor="@color/solid_white"
       android:layout_width="wrap_content"
       android:layout_height="27dp"
       android:minWidth="27dp"
       android:gravity="center|bottom"
       android:paddingBottom="1dp"
       android:layout_alignParentTop="true"
	   android:layout_alignParentBottom="true"
       android:layout_toRightOf="@+id/sale_product_item_imageview"
       
       android:textSize="20sp"
       android:singleLine="true"
       android:maxLength="4" />

   
   <com.cynovo.sirius.widget.MoneyView
       android:id="@+id/sale_product_item_price"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
       android:layout_alignParentBottom="true"
       android:layout_marginRight="22dp"
       android:layout_marginBottom="5dp"
       android:textSize="25sp"
       android:textColor="@color/text_normal_color"
        android:maxLength="14"
       android:singleLine="true" />

   <TextView
       android:id="@+id/sale_product_item_name"
       android:layout_width="wrap_content"
       android:layout_height="54dp"
       android:textColor="@color/text_normal_color"
		android:layout_alignParentTop="true"
		android:maxLines="2"
		android:maxHeight="54dp"
       android:layout_marginLeft="8dp"
       android:layout_toRightOf="@+id/sale_product_item_imageview"
       android:textSize="20sp" />

</RelativeLayout>